{
  "name": "echarts-mcp",
  "description": "A MCP server to generate echarts image",
  "version": "0.0.2",
  "main": "cli.js",
  "bin": "cli.js",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/w2xi/echarts-mcp.git"
  },
  "homepage": "https://github.com/w2xi/echarts-mcp",
  "scripts": {
